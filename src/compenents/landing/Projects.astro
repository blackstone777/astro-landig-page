---
import { projects } from "../../config/projects.json";
---

<h2 class="text-2xl font-bold my-4 text-center">Projects</h2>

{
  projects.map((project) => (
    <div class="flex flex-cols text-center mb-2 p-5 md:text-left md:flex-row">
      <div class="flex-1">
        <h2 class="font-bold text-2xl my-4">{project.title}</h2>
        <p>{project.description}</p>
        <button class="bg-indigo-700 px-3 py-2 hover:bg-indigo-900" >more info</button>
      </div>
      <div class="flex-1">
        <img src={project.images} class="w-72 m-auto" /> 
      </div>
    </div>
  ))
}
